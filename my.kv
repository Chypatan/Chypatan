#: import MDToolbar kivymd.uix.toolbar

<Enter>:
	MDFloatLayout:
		id: Basic
		Button:
			id: Blackout
			text: ''
			background_color: [0, 0, 0, 0]
		MDBoxLayout:
			orientation: 'vertical'
			canvas.before:
				Color:
					rgba: [0, .8, 0, .1]
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius: [dp(0)]

			MDToolbar:
				id: Toolbar
				title: ''
				#left_action_items: [["menu", lambda x: root.options()]]
				#right_action_items: [["dots-vertical"]]
				md_bg_color: [0, .5, 0, .9]
				specific_text_color: [0, 0, 0, 1]
				elevation: dp(5)
			
			MDBoxLayout:
				id: content
				orientation: 'vertical'

				Label:
					id: Counter_questions
					color: [0, 0, 0, .8]
					size_hint: 1, .1

				Label:
					id: Question
					text: 'Проведите вправо от\nлевого края экрана'
					color: [0, 0, 0, .8]
					font_size: '25sp'
					halign: 'center'
					canvas.before:
						Color:
							rgba: [0, .8, 0, .03]
						RoundedRectangle:
							size: self.size
							pos: self.pos
							radius: [dp(50)]
						
				MDGridLayout:
					id: place_for_buttons
					size_hint: 1, .3
					cols: 2
					spacing: dp(2)
					padding: dp(2)

<Creator>:
	MDBoxLayout:
		orientation: 'vertical'
		canvas.before:
			Color:
				rgba: [0, .8, 0, .1]
			RoundedRectangle:
				size: self.size
				pos: self.pos
				radius: [dp(30)]
		padding: dp(25)
		MDLabel:
			text: 'Придумайте не менее 10 вопросов'
			color: [0, .5, 0, .9]
			halign: 'center'
			font_size: '18sp'
			size_hint: 1, .2
		MDTextField:
			id: q # question / вопрос
			focus: False
			mode: 'fill'
			fill_color: [0, .8, 0, .03]
			radius: [dp(20)]
			hint_text: 'Вопрос'
			current_hint_text_color: [0, .5, 0, .9]
			helper_text: 'Впишите в это поле вопрос'
			helper_text_mode: 'on_focus'
			text_color: [0, 0, 0, .9]
			multiline: True
			max_height: '200dp'
			color_mode: 'custom'
			line_color_normal: [0, 0, 0, 1]
			line_color_focus: [0, .5, 0, .9]
			line_anim: False
		MDLabel:
			size_hint: 1, .1
		MDTextField:
			id: a # answer / ответ
			focus: False
			mode: 'fill'
			fill_color: [0, .8, 0, .03]
			radius: [dp(20)]
			hint_text: 'Ответ'
			current_hint_text_color: [0, .5, 0, .9]
			helper_text: 'Впишите в это поле ответ'
			helper_text_mode: 'on_focus'
			text_color: [0, 0, 0, .9]
			multiline: True
			max_height: '200dp'
			color_mode: 'custom'
			line_color_normal: [0, 0, 0, 1]
			line_color_focus: [0, .5, 0, .9]
			line_anim: False
		MDLabel:
			size_hint: 1, .1
		MDTextField:
			id: n # name / имя
			focus: False
			mode: 'fill'
			fill_color: [0, .8, 0, .03]
			radius: [dp(20)]
			hint_text: 'Название'
			current_hint_text_color: [0, .5, 0, .9]
			helper_text: 'Впишите в это поле название теста'
			helper_text_mode: 'on_focus'
			text_color: [0, 0, 0, .9]
			multiline: False
			#max_height: '200dp'
			color_mode: 'custom'
			line_color_normal: [0, 0, 0, 1]
			line_color_focus: [0, .5, 0, .9]
			line_anim: False
		MDLabel:
			size_hint: 1, .4
	MDGridLayout:
		padding: dp(25)
		spacing: dp(10)
		size_hint: 1, .1
		cols: 3
		MDRaisedButton:
			size_hint: .25, None
			text: 'Отмена'
			md_bg_color: [0, .5, 0, .9]
			on_press: root.manager.current = '1'
			on_press: root.manager.transition.direction = 'right'
			on_press: root.ids.q.text = ''
			on_press: root.ids.a.text = ''
			on_press: root.ids.n.text = ''
			on_press: root.zero_counter()
		MDRaisedButton:
			id: save
			size_hint: .25, None
			text: 'Сохранить'
			md_bg_color: [0, .5, 0, .9]
			md_bg_color_disabled: [0, .8, 0, .03]
			on_press: root.save_list()
		MDRaisedButton:
			size_hint: .25, None
			text: 'Далее'
			md_bg_color: [0, .5, 0, .9]
			on_press: root.counter()


<ListBackground@MDFloatLayout>:
	canvas.before:
		Color:
			rgba: [1, 1, 1, 1]
		RoundedRectangle:
			pos: self.pos
			size: self.size
			radius: [dp(5)]
	pos_hint: {'center_x':-1, 'center_y':.46}
	size_hint: .9, .92
	Button:
		id: plm
		text: ''
		background_color: [0, 0, 0, 0]
		size_hint_x: 1.11
		pos: root.pos
	Button:
		id: Color_options
		text: ''
		background_color: [0, 0, 0, 0]
		size: root.size
		pos: root.pos
	MDBoxLayout:
		orientation: 'vertical'
		pos: root.pos
		size: root.size
		Label:
			text: 'Сохранённые файлы:'
			color: [0, 0, 0, .8]
			font_size: '20sp'
			size_hint_y: .05
			pos: root.pos
		ScrollView:
			do_scroll_x: False
			do_scroll_y: True
			effect_cls: 'ScrollEffect'
			GridLayout:
        		cols: 1
        		spacing: dp(20)
      	  	padding: dp(10)
   	     	id: Greed
    	    	size_hint_y: None
     	   	height: self.minimum_height
		MDRaisedButton:
			id: Constructor
			text: 'Конструктор'
			font_size: '20sp'
			size_hint_y:.1
			size_hint_x: 1
			pos: root.pos
			text_color: 0, 0, 0, .8
			md_bg_color: 0, .5, 0, .9

<DialogStyle@MDDialog>:
	text: 'Список'
        	
<total@Label>:
	text: 'Label'
	color: 0, 0, 0, .8
	font_size: '25sp'
	halign: 'center'

<VariantsButtons@MDFillRoundFlatButton>:
	text: 'Здесь вариант ответа'
	size_hint: 1, 1
	text_color: 1, 1, 1, .9
	md_bg_color: 0, .5, 0, .9
	font_style: 'Subtitle1'

<Shield@Button>:
	text: ''
	background_color: 0, 0, 0, 0
	size_hint: 1, 1